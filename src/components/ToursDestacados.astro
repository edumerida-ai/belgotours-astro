    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  const filterButtons = document.querySelectorAll(".filter-btn");
  const tourCards = document.querySelectorAll(".tour-card");

  filterButtons.forEach(btn => {
    btn.addEventListener("click", () => {
      const filter = btn.dataset.filter;

      // Estado activo
      filterButtons.forEach(b => {
        b.classList.remove("bg-neutral-900", "text-white");
        b.classList.add("bg-white", "border", "border-neutral-300", "text-neutral-700");
      });

      btn.classList.add("bg-neutral-900", "text-white");
      btn.classList.remove("bg-white", "border-neutral-300", "text-neutral-700");

      // Filtrado
      tourCards.forEach(card => {
        if (filter === "all" || card.dataset.category === filter) {
          card.classList.remove("hidden");
        } else {
          card.classList.add("hidden");
        }
      });
    });
  });
</script>
