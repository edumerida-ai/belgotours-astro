};

const copy = t[lang] || t.en;
---

<Layout title={copy.title}>
  <TourHeader simple />

  <main class="bg-white">
    <section class="max-w-3xl mx-auto px-6 py-16 prose prose-gray">
      <h1>{copy.h1}</h1>

      <h2>{copy.sections.company}</h2>
      <p set:html={copy.content.company} />

      <h2>{copy.sections.usage}</h2>
      <p>{copy.content.usage}</p>

      <h2>{copy.sections.liability}</h2>
      <p>{copy.content.liability}</p>

      <h2>{copy.sections.law}</h2>
      <p>{copy.content.law}</p>
    </section>
  </main>

  <Footer lang={lang} />
</Layout>
