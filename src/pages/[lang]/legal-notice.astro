    },
  },

  en: {
    title: "Legal Notice | BelgoTours",
    h1: "Legal Notice",
    sections: {
      company: "Company information",
      usage: "Website usage",
      liability: "Liability",
      law: "Jurisdiction",
    },
    content: {
      company: `
        BelgoTours<br />
        Brussels, Belgium<br />
        Email: <a href="mailto:contact@belgotours.com">contact@belgotours.com</a>
      `,
