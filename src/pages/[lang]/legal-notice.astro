  },

  fr: {
    title: "Mentions Légales | BelgoTours",
    h1: "Mentions Légales",
    sections: {
      company: "Informations sur l’entreprise",
      usage: "Utilisation du site web",
      liability: "Responsabilité",
      law: "Juridiction",
    },
    content: {
      company: `
        BelgoTours<br />
        Bruxelles, Belgique<br />
        Email : <a href="mailto:contact@belgotours.com">contact@belgotours.com</a>
      `,
      usage:
