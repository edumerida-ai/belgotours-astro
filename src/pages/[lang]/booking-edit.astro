                        href={`/${uiLang}/booking-success?id=${reservaId}`}
                        class="inline-flex items-center justify-center text-xs font-medium text-gray-500 hover:text-gray-700"
                      >
                        {tButtons.back[uiLang]}
                      </a>
                    </div>
                  </form>
                </div>
              </div>
            </section>
          </div>
        </>
      )}
    </div>
  </main>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const root = document.getElementById("bookingEditRoot");
    if (!root) return;

    const lang = root.dataset.lang || "es";
    const reservaId = root.dataset.reservaId;
    const apiBase =
      root.dataset.apiBase || "http://localhost:1337/api";

    const form = document.getElementById("editForm");
    const statusEl = document.getElementById("editStatus");
    const saveBtn = document.getElementById("saveChangesBtn");
    const cancelBtn = document.getElementById("cancelBookingBtn");

    if (!reservaId || !form) return;

    const t = {
      saveOk: {
        es: "‚úÖ Cambios guardados correctamente.",
        en: "‚úÖ Changes saved successfully.",
        it: "‚úÖ Modifiche salvate correttamente.",
        fr: "‚úÖ Modifications enregistr√©es avec succ√®s.",
      },
      saveError: {
        es: "‚ùå No se pudieron guardar tus cambios. Intenta de nuevo.",
        en: "‚ùå Your changes could not be saved. Please try again.",
        it: "‚ùå Impossibile salvare le modifiche. Riprova.",
        fr: "‚ùå Impossible d'enregistrer vos modifications. Veuillez r√©essayer.",
      },
      cancelConfirm: {
        es: "¬øSeguro que quieres cancelar esta reserva? Esta acci√≥n no se puede deshacer.",
        en: "Are you sure you want to cancel this booking? This action cannot be undone.",
        it: "Sei sicuro di voler annullare questa prenotazione? Questa azione non pu√≤ essere annullata.",
        fr: "√ätes-vous s√ªr de vouloir annuler cette r√©servation ? Cette action est irr√©versible.",
      },
      cancelDone: {
        es: "‚úÖ Reserva cancelada correctamente.",
        en: "‚úÖ Booking cancelled successfully.",
        it: "‚úÖ Prenotazione annullata correttamente.",
        fr: "‚úÖ R√©servation annul√©e avec succ√®s.",
      },
      cancelError: {
        es: "‚ùå No se pudo cancelar la reserva. Intenta de nuevo.",
        en: "‚ùå The booking could not be cancelled. Please try again.",
        it: "‚ùå Impossibile annullare la prenotazione. Riprova.",
        fr: "‚ùå Impossible d'annuler la r√©servation. Veuillez r√©essayer.",
      },
    };

    function msg(key) {
      const dict = t[key] || {};
      return dict[lang] || dict["es"] || "";
    }

    async function handleSave(e) {
      e.preventDefault();
      if (!reservaId) return;

      const formData = new FormData(form);

      const payload = {
        nombre: formData.get("nombre")?.toString().trim(),
        apellidos: formData.get("apellidos")?.toString().trim(),
        email: formData.get("email")?.toString().trim(),
        telefono: formData.get("telefono")?.toString().trim(),
        ciudad: formData.get("ciudad")?.toString().trim(),
        pais: formData.get("pais")?.toString().trim(),
        adultos: Number(formData.get("adultos") || 1),
        ninos: Number(formData.get("ninos") || 0),
        comentarios_cliente:
          formData.get("comentarios")?.toString().trim() || "",
      };

      if (saveBtn) {
        saveBtn.disabled = true;
        saveBtn.textContent = "‚Ä¶";
      }
      if (statusEl) {
        statusEl.textContent = "";
      }

      try {
        const res = await fetch(
          `${apiBase.replace(/\/$/, "")}/reservas/public/${encodeURIComponent(
            reservaId
          )}`,
          {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(payload),
          }
        );

        if (!res.ok) {
          throw new Error("Bad status " + res.status);
        }

        if (statusEl) {
          statusEl.className =
            "text-xs text-emerald-700 mt-1";
          statusEl.textContent = msg("saveOk");
        }

        // Opcional: redirigir de nuevo a booking-success
        setTimeout(() => {
          window.location.href = `/${lang}/booking-success?id=${encodeURIComponent(
            reservaId
          )}`;
        }, 800);
      } catch (err) {
        console.error(err);
        if (statusEl) {
          statusEl.className =
            "text-xs text-red-600 mt-1";
          statusEl.textContent = msg("saveError");
        }
      } finally {
        if (saveBtn) {
          saveBtn.disabled = false;
          // Restaurar texto seg√∫n idioma
          if (lang === "es")
            saveBtn.textContent = "üíæ Guardar cambios";
          else if (lang === "en")
            saveBtn.textContent = "üíæ Save changes";
          else if (lang === "it")
            saveBtn.textContent = "üíæ Salva modifiche";
          else
            saveBtn.textContent = "üíæ Enregistrer les changements";
        }
      }
    }

    async function handleCancel() {
      if (!reservaId) return;
      const confirmMsg = msg("cancelConfirm");
      if (!window.confirm(confirmMsg)) return;

      if (cancelBtn) {
        cancelBtn.disabled = true;
      }
      if (statusEl) {
        statusEl.textContent = "";
      }

      try {
        const res = await fetch(
          `${apiBase.replace(
            /\/$/,
            ""
          )}/reservas/public/${encodeURIComponent(
            reservaId
          )}/cancel`,
          {
            method: "DELETE",
          }
        );

        if (!res.ok) {
          throw new Error("Bad status " + res.status);
        }

        if (statusEl) {
          statusEl.className =
            "text-xs text-emerald-700 mt-1";
          statusEl.textContent = msg("cancelDone");
        }

        // Despu√©s de cancelar, enviamos al usuario al home de su idioma
        setTimeout(() => {
          window.location.href = `/${lang}/`;
        }, 900);
      } catch (err) {
        console.error(err);
        if (statusEl) {
          statusEl.className =
            "text-xs text-red-600 mt-1";
          statusEl.textContent = msg("cancelError");
        }
      } finally {
        if (cancelBtn) {
          cancelBtn.disabled = false;
        }
      }
    }

    form.addEventListener("submit", handleSave);
    cancelBtn?.addEventListener("click", handleCancel);
  });
</script>
