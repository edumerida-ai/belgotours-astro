const copy = t[lang] || t.en;
---

<Layout title={copy.title}>
  <TourHeader simple />

  <main class="bg-white">
    <section class="max-w-3xl mx-auto px-6 py-16 prose prose-gray">
      <h1>{copy.h1}</h1>

      <h2>{copy.sections.general}</h2>
      <p>{copy.content.general}</p>

      <h2>{copy.sections.services}</h2>
      <ul>
        {copy.content.services.map(item => (
          <li>{item}</li>
        ))}
      </ul>

      <h2>{copy.sections.reservations}</h2>
      <p>{copy.content.reservations}</p>

      <h2>{copy.sections.cancellations}</h2>
      <p>{copy.content.cancellations}</p>

      <h2>{copy.sections.ip}</h2>
      <p>{copy.content.ip}</p>

      <h2>{copy.sections.law}</h2>
      <p>{copy.content.law}</p>
    </section>
  </main>

  <Footer lang={lang} />
</Layout>
