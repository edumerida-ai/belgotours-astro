  it: {
    title: "Termini e Condizioni | BelgoTours",
    h1: "Termini e Condizioni",
    sections: {
      general: "1. Informazioni generali",
      services: "2. Servizi",
      reservations: "3. Prenotazioni",
      cancellations: "4. Cancellazioni",
      ip: "5. Proprietà intellettuale",
      law: "6. Legge applicabile",
    },
    content: {
      general:
        "BelgoTours è un operatore turistico locale con sede a Bruxelles che offre tour guidati e esperienze private in Belgio.",
      services: [
