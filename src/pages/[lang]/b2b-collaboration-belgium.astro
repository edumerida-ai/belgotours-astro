        <h2 class="text-2xl font-bold text-gray-900">
          {copy.who}
        </h2>
        <ul class="grid grid-cols-2 gap-2 text-gray-700 text-sm md:text-base">
          {copy.whoList.map((w) => <li>‚Ä¢ {w}</li>)}
        </ul>
      </section>

      <!-- FORM -->
      <section class="space-y-6">
        <h2 class="text-2xl font-bold text-gray-900">
          {copy.form}
        </h2>

        <form id="b2bForm" class="space-y-4 max-w-lg">

          <input type="text" name="name" placeholder={copy.fields.name} required
            class="w-full border border-gray-300 rounded-xl px-4 py-3" />

          <input type="text" name="company" placeholder={copy.fields.company} required
            class="w-full border border-gray-300 rounded-xl px-4 py-3" />

          <input type="email" name="email" placeholder={copy.fields.email} required
            class="w-full border border-gray-300 rounded-xl px-4 py-3" />

          <select name="collaboration_type" required
            class="w-full border border-gray-300 rounded-xl px-4 py-3">
            <option value="">{copy.fields.type}</option>
            {Object.entries(copy.types).map(([k, v]) => (
              <option value={k}>{v}</option>
            ))}
          </select>

          <button id="submitBtn" type="submit"
            class="bg-gray-900 text-white font-bold px-6 py-3 rounded-xl hover:bg-gray-800 transition">
            {copy.send}
          </button>

          <p class="text-xs text-gray-500">{copy.micro}</p>

          <p
            id="successMsg"
            class="hidden text-green-700 font-semibold text-sm mt-4 animate-fade-in"
